---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		    <title>Andrew Durnford</title>
		<meta
		name="description"
		content="Computer Science & Business Student focused on Full Stack development"
		/>

		<!-- Google / Search Engine Tags -->
		<meta itemprop="name" content="Andrew Durnford" />
		<meta
		itemprop="description"
		content="Computer Science & Business Student focused on Full Stack development"
		/>
		<meta itemprop="image" content="https://personal-website-lilac-tau.vercel.app/meta.png" /> 

		<!-- Facebook Meta Tags -->
		<meta property="og:url" content="https://personal-website-lilac-tau.vercel.app/" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Andrew Durnford" />
		<meta
		property="og:description"
		content="Computer Science & Business Student focused on Full Stack development"
		/>
		<meta
		property="og:image"
		content="https://personal-website-lilac-tau.vercel.app/meta.png"
		/>

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Andrew Durnford" />
		<meta
		name="twitter:description"
		content="Computer Science & Business Student focused on Full Stack development"
		/>
		<meta
		name="twitter:image"
		content="https://personal-website-lilac-tau.vercel.app/meta.png"
		/>
		<link
		rel="preload"
		href="/fonts/Lexend.ttf"
		as="font"
		crossorigin
		/>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background: #001A23;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
